        <input type="url" id="companyurl">

        <label for="position">Position/Role:</label>
        <input type="text" id="position">

        <label for="position">Position/Role:</label>
        <input type="text" id="position">




        <button type="button" onclick="generateVCard()">Generate VCard</button>
    </form>

    <script>
        function generateVCard() {
            var name = document.getElementById('name').value;
            var email = document.getElementById('email').value;
            var phone = document.getElementById('phone').value;

            var vcardContent = `BEGIN:VCARD
VERSION:3.0
FN:${name}
EMAIL:${email}
TEL:${phone}
END:VCARD`;

            var blob = new Blob([vcardContent], { type: 'text/vcard' });
            var link = document.createElement('a');
            link.href = window.URL.createObjectURL(blob);
            link.download = `${name.replace(/\s+/g, '_').toLowerCase()}_contact.vcf`;
            link.click();
        }
    </script>
